%h1
  = titles(@doc).first
  - _, *ot = titles(@doc) && !ot.nil? && ot.each do |t|
    %small= "aka %s" % t

%ul.unstyled
  - email_uris(@doc).each do |uri|
    %li
      %i.icon-envelope
      %a{:href => uri.html_safe}
        =uri.gsub(/^mailto:/,'').html_safe
  - urls(@doc).each do |url|
    %li
      %i.icon-globe
      %a{:href => url}
        =url

%p.description
  =description(@doc).gsub(/\n/,"<br/>\n").html_safe

%pre
  %code#rifcs.prettyprint.linenums
    =annotated_xml(@doc)